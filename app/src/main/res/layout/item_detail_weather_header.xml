<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="androidx.core.content.ContextCompat"/>
        <variable
            name="weatherForecast"
            type="com.byounghong.weatherforecast.data.remote.data.WeatherForecast"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/textLocationHeader"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_weight="0.3"
            android:gravity="center"
            android:background="@drawable/table_border_shadow"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="@id/textTodayHeader"
            app:layout_constraintEnd_toStartOf="@id/textTodayHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textTodayHeader"
            android:textSize="15dp"
            android:text="@string/local"
            />
        <TextView
            android:id="@+id/textTodayHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            android:background="@drawable/table_border_shadow"
            layout="@layout/view_detail_weather"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/textLocationHeader"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textTomorrowHeader"
            android:paddingHorizontal="2dp"
            android:paddingVertical="10dp"
            android:text="@string/today"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/textTomorrowHeader"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="2dp"
            layout="@layout/view_detail_weather"
            app:layout_constraintStart_toEndOf="@id/textTodayHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/table_border_shadow"
            android:text="@string/tomorrow"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>